{
    "manifest_version": 2,

    "name": "Override New Tab",
    "description": "This extension shows a custom page when a new tab is opened",
    "version": "1.0",
    
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
      },

    "background":{
        "scripts": ["background.js"]
    },

    "browser_action": 
    {
        "default_icon": "icon.png",
        "default_title": "My custom google page!"
    },

    "permissions": [
        "tabs",
        "storage"
    ]
}